# API Keys
OPENAI_API_KEY=your_openai_api_key_here  # Required for DALL-E cover generation (direct OpenAI API)
OPENROUTER_API_KEY=your_openrouter_api_key_here  # Required for text generation (Claude, GPT-4o-mini)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here  # Required for audio narration

# Optional: Custom model configurations (OpenRouter format)
OPENAI_MODEL=openai/gpt-4o-mini
OPENAI_FALLBACK_MODEL=openai/gpt-4o-mini
ANTHROPIC_MODEL=anthropic/claude-haiku-4.5
ANTHROPIC_FALLBACK_MODEL=anthropic/claude-sonnet-4.5
ELEVENLABS_VOICE_ID=Sarah

# Development settings
DEBUG=false
LOG_LEVEL=INFO

# Caching settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_TYPE=memory
REDIS_URL=redis://localhost:6379

# Langfuse Observability & Tracing
# Get your keys from https://cloud.langfuse.com or https://us.cloud.langfuse.com
# IMPORTANT: Variable names must match exactly (case-sensitive)
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_HOST=https://cloud.langfuse.com
# For US region, use: https://us.cloud.langfuse.com

# Publishing Options
USE_AI_COVERS=false  # Set to true to use DALL-E 3 for AI-generated covers (requires OPENAI_API_KEY)
PUBLISHER_NAME=Modernized Classics Press
PUBLISHER_URL=  # Optional

# Pipeline Feature Toggles
ENABLE_QA_REVIEW=true  # Enable/disable QA text validation (set to false to skip QA and remediation)
ENABLE_AUDIO=true  # Enable/disable audio generation (set to false to skip TTS, mastering, QA audio)
