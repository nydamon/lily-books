# API Keys
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: Custom model configurations
OPENAI_MODEL=openai/gpt-5
OPENAI_FALLBACK_MODEL=openai/gpt-5-mini
ANTHROPIC_MODEL=anthropic/claude-haiku-4.5
ANTHROPIC_FALLBACK_MODEL=anthropic/claude-sonnet-4.5
ELEVENLABS_VOICE_ID=Sarah

# Development settings
DEBUG=false
LOG_LEVEL=INFO

# Caching settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_TYPE=memory
REDIS_URL=redis://localhost:6379

# Langfuse settings
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# Publishing Options
USE_AI_COVERS=false  # Set to true to use DALL-E for covers
PUBLISHER_NAME=Modernized Classics Press
PUBLISHER_URL=  # Optional
